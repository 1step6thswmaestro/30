<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soma.park.myapplication" >

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/lock_icon"
        android:label="@string/app_name"
        android:manageSpaceActivity=".LockScreenActivity"
        android:theme="@style/Theme.AppCompat.NoActionBar" >

        <activity android:name="com.soma.park.myapplication.Splash" />
        <activity android:name="com.soma.park.myapplication.AccessTerms" />

        <activity
            android:name="com.soma.park.myapplication.LockScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".AppsListActivity" />
        <activity android:name=".Activities.PasswordActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".SettingAlertActivity" />
        <activity android:name=".SettingBreakActivity" />
        <activity android:name=".SettingBrowserActivity" />
        <activity android:name=".ReservActivity" />
        <activity android:name=".ReservAddActivity" />
        <activity android:name=".Observer.AppList" />
        <activity android:name=".StudyBrowser"
            android:theme="@style/Theme.AppCompat"/>
        <activity
            android:name="com.soma.park.myapplication.AlertModeActivity"
            android:theme="@android:style/Theme.Dialog">
        </activity>

        <service android:name="com.soma.park.myapplication.ScreenService" />

        <receiver
            android:name=".BootReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.soma.park.myapplication.DeviceEventReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.soma.park.myapplication.AlarmStartReceiver" />
        <receiver android:name="com.soma.park.myapplication.AlarmStopReceiver" />
        <receiver android:name="com.soma.park.myapplication.AlertAlarmReceiver" />
        <receiver android:name="com.soma.park.myapplication.BreakAlarmReceiver" />
        <receiver android:name="com.soma.park.myapplication.StudyAlarmReceiver" />
        <receiver android:name="com.soma.park.myapplication.NowStartReceiver" />
        <receiver android:name="com.soma.park.myapplication.NowStopReceiver" />


    </application>

</manifest>