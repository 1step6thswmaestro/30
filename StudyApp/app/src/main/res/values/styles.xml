<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">#008733</item>
    </style>

    <style name="OverlayDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <color name="dark">#008733</color>
    <color name="light">#e7f3b1</color>
    <style name="PreferencesTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColor">#008733</item>
        <item name="android:textColorHint">#008733</item>
        <item name="android:textColorHighlight">#008733</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>
    <style name="listViewPrefs" parent="@android:style/Widget.ListView">
        <item name="android:background">#e7f3b1</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

</resources>