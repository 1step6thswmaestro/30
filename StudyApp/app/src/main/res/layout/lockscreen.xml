<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType="fitXY"
        android:src="@android:color/background_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" STUDY MODE"
            android:textSize="20dp"
            android:id="@+id/app_title"
            android:textStyle="bold"
            android:background="#008fff"
            android:textColor="@android:color/background_light"
            android:gravity="center_vertical" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock2"
            android:layout_toLeftOf="@+id/back_button"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="nomalModeLauncher"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/current_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/current_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="긴급 모드"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/current_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴식 모드"
            android:textSize="15dp" />
    </LinearLayout>

    <Button
        android:id="@+id/emergency_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:onClick="goAlertMode"
        android:text="긴급 모드" />

    <Button
        android:id="@+id/apps_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="showApps"
        android:background="@android:drawable/ic_menu_more" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/apps_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout"
        android:background="@android:color/background_light"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="250dp">

        <TableRow android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/call_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_call"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/msg_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_send"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/browser_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_search"
                android:layout_weight="1"
                android:onClick="executeApp" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/camera_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/gallery_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/memo_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:layout_weight="1"
                android:onClick="executeApp" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/calculator_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/alarm_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:layout_weight="1"
                android:onClick="executeApp" />
            <ImageView
                android:id="@+id/calendar_app"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:layout_weight="1"
                android:onClick="executeApp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>