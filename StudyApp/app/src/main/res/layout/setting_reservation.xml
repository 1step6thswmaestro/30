<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" 예약 잠금"
        android:textSize="20dp"
        android:id="@+id/reserv_title"
        android:textStyle="bold"
        android:background="#008fff"
        android:gravity="center_vertical"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:id="@+id/reserv_clear_btn"
        android:layout_below="@+id/reserv_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserv_add_btn"
        android:layout_gravity="right"
        android:background="@android:drawable/ic_input_add"
        android:layout_below="@+id/reserv_title"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/reserv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#868787"
        android:dividerHeight="1.5dp"
        android:layout_below="@+id/reserv_clear_btn"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:id="@+id/reserv_ok_btn"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
