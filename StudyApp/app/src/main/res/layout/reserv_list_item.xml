<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <CheckBox
        android:id="@+id/item_reserv_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:focusable="false" />

    <TextView
        android:id="@+id/item_reserv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_reserv_checkbox"
        android:paddingLeft="10dp"
        android:textColor="#008733"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/item_reserv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_reserv_title"
        android:paddingLeft="10dp"
        android:textColor="#008733"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/item_reserv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_reserv_title"
        android:layout_toRightOf="@+id/item_reserv_checkbox"
        android:paddingLeft="10dp"
        android:textColor="#008733"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/item_reserv_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_reserv_time"
        android:layout_toRightOf="@+id/item_reserv_week"
        android:paddingLeft="10dp"
        android:textColor="#008733"
        android:textSize="10dp" />


</RelativeLayout>